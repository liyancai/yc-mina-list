.section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-view {
  margin: 25rpx; padding: 50rpx;
  width: 600rpx; line-height: 2rem;
  background: var(--blue);
  color: #fff;
  border-radius: 3px;
}

button {
  width: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 10pt;
}

.btn-link {
  padding: 30rpx;
  font-size: 10pt;
  color: var(--gray);
}