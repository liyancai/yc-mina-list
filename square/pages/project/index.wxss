.project-view {
  margin: 25rpx;
  border-radius: 3px;
  box-shadow: 2px 2px 10px rgba(10, 10, 10, .2);  
  display: flex;
  flex-direction: column;
}
.project-info {
  margin: 280rpx 0 0;
  padding: 10rpx 25rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 11pt;
  color: #fff;
  border-radius: 0 0 3px 3px;
}
.project-info.default {
  margin: 0;
  border-radius: 3px;
}
.project-info image {
  margin-right: 10rpx;
  width: 80rpx; height: 80rpx; min-width: 80rpx;
}