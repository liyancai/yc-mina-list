page {
  --love: #fd575d;
	/* 标准色 */
	--red: #e54d42;
	--orange: #f37b1d;
	--yellow: #fbbd08;
	--olive: #8dc63f;
	--green: #39b54a;
	--cyan: #1cbbb4;
	--blue: #0081ff;
	--purple: #6739b6;
	--mauve: #9c26b0;
	--pink: #e03997;
	--brown: #a5673f;
	--grey: #8799a3;
	--black: #333333;
	--darkGray: #666666;
	--gray: #aaaaaa;
	--ghostWhite: #f1f1f1;
	--white: #ffffff;
	/* 浅色 */
	--redLight: #fadbd9;
	--orangeLight: #fde6d2;
	--yellowLight: #fef2ce;
	--oliveLight: #e8f4d9;
	--greenLight: #d7f0db;
	--cyanLight: #d2f1f0;
	--blueLight: #cce6ff;
	--purpleLight: #e1d7f0;
	--mauveLight: #ebd4ef;
	--pinkLight: #f9d7ea;
	--brownLight: #ede1d9;
	--greyLight: #e7ebed;

  --main-font-color: #353535;
  --main-font-color-light: #fff;
  --tips-font-color: #888888;
  --main-background-color: #fff;

  margin: 0; padding: 0;
  color: var(--main-font-color);
  background: var(--main-background-color);
  font-size: 11pt;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

}

.line-m { width: 100vw; height: 5vw; background-color: var(--main-background-color); }
.line-m.min { height: 2vw; }
.hidden { display: none; }
.yc-ellipsis {
    line-height: 1.5rem;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    word-wrap: break-word;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}
.yc-ellipsis.text-line-1 { -webkit-line-clamp: 1; }
.yc-ellipsis.text-line-2 { -webkit-line-clamp: 2; }
.yc-ellipsis.text-line-3 { -webkit-line-clamp: 3; }

.checkbox {
  width: 40rpx; height: 40rpx;
  border-width: 2px;
  border-style: solid;
  border-radius: 50%;
  border-color: var(--blue);
}
.checkbox.active {
  border-color: var(--green);
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.checkbox.active span {
  width: 2px; height: 2px;
  border: 8rpx solid var(--green);
  border-radius: 50%;
}

.label {
  margin: 35rpx;
  font-size: 13pt;
  font-weight: bold;
}

.opt-icon {
  width: 40px; height: 40px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: var(--green);
  color: #fff;
  box-shadow: 2px 2px 10px rgba(100, 100, 100, .2);  
  border-radius: 50%;

  position: fixed;
  right: 10vw; bottom: 10vw;
}


