page {
	/* 标准色 */
	--red: #e54d42;
	--orange: #f37b1d;
	--yellow: #fbbd08;
	--olive: #8dc63f;
	--green: #39b54a;
	--cyan: #1cbbb4;
	--blue: #0081ff;
	--purple: #6739b6;
	--mauve: #9c26b0;
	--pink: #e03997;
	--brown: #a5673f;
	--grey: #8799a3;
	--black: #333333;
	--darkGray: #666666;
	--gray: #aaaaaa;
	--ghostWhite: #f1f1f1;
	--white: #ffffff;


  --yc-green: #4cce75;
  --yc-red: #fd575d;
  --yc-purple: #8564c7;
  --yc-cyan: #1cbbb4;
  --yc-blue: #3b9cff;

  --main-font-color: #353535;
  --main-font-color-light: #fff;
  --tips-font-color: #888888;
  --main-background-color: #fff;
  --gray-background-color: #f8f8f8;

  margin: 0; padding: 0;
  color: var(--main-font-color);
  background: var(--main-background-color);
  font-size: 11pt;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

}

.line-m { width: 100vw; height: 5vw; background-color: var(--main-background-color); }
.line-m.min { height: 2vw; }
.line-m.gray {
  background-color: var(--gray-background-color);
}
.hidden { display: none; }
.yc-ellipsis {
    line-height: 1.5rem;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    word-wrap: break-word;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}
.yc-ellipsis.text-line-1 { -webkit-line-clamp: 1; }
.yc-ellipsis.text-line-2 { -webkit-line-clamp: 2; }
.yc-ellipsis.text-line-3 { -webkit-line-clamp: 3; }

.label {
  margin: 35rpx;
  font-size: 13pt;
  font-weight: bold;
}
.tips {
  font-size: 10pt;
  color: var(--tips-font-color);
  font-weight: normal;
}

.opt-link {
  color: var(--blue);
}
.opt-icon {
  width: 45px; height: 45px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: var(--green);
  color: #fff;
  box-shadow: 2px 2px 10px rgba(100, 100, 100, .2);
  border-radius: 50%;

  position: fixed;
  right: 10vw; bottom: 10vw;
  z-index: 10;
}
.opt-btn {
  padding: 20rpx 0;
  width: 300rpx;
  text-align: center;
  background: var(--green);
  color: #fff;
  border-radius: 20px;
  box-shadow: 2px 2px 10px rgba(10, 10, 10, .2);  

  position: fixed;
  left: calc(50vw - 150rpx); bottom: 10vw;
  z-index: 10;
}

.model-view {
  width: 100vw;
  position: fixed;
  top: 0; z-index: 10;
}
.model-view .mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, .7);
  z-index: 10;
  transition: all .2s ease-in-out;
  opacity: 0;
  visibility: hidden;
}
.model-view .main {
  margin: 350rpx auto 0;
  width: 75vw;
  text-align: center;
  background: #fff;
  border-radius: 3px;
  position: relative;
  z-index: 100;
  transition: all .2s ease-in-out;
  display: none;
}
.model-view.active .main {
  display: block;
}
.model-view.active .mask {
  opacity: 1;
  visibility: visible;
}
.model-view .title {
  padding: 35rpx 0 10rpx;
  font-size: 12pt;
}
.model-view .model-text {
  padding: 25rpx;
  font-size: 10pt;
  color: var(--tips-font-color);
}
.model-view button {
  width: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 10pt;
}
.model-view .link {
  padding: 20rpx 0;
  font-size: 10pt;
}
.model-opt {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 10pt;
}
.model-opt view {
  padding: 20rpx 0;
  flex: 1;
  text-align: center;
  border-top: 1px solid var(--ghostWhite);
  box-sizing: content-box;
}
.model-opt view:last-child {
  background: var(--green);
  color: var(--white);
  border-top: 1px solid var(--green);
  border-bottom-right-radius: 3px;
}
