.icon-view {
  margin: 25rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.icon-view image {
  width: 120rpx; height: 120rpx;
  border: 2px solid var(--ghostWhite);
  border-radius: 3px;
}
.icon-view image.active {
  border-color: var(--green);
}

.days-view {
  margin: 25rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.days-item {
  padding: 5px 0;
  width: 120rpx;
  font-size: 10pt;
  text-align: center;
  border: 2px solid var(--green);
  border-radius: 3px;
}
.days-item.active {
  background: var(--green);
  color: var(--white);
}

input {
  margin: 0 20rpx; padding: 20rpx 15rpx;
  border-bottom: 1px solid var(--ghostWhite);
}

.opt-icon {
  left: calc(50vw - 20px);
}