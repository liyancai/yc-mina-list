.project-view {
  padding: 20rpx 0 80rpx;
  min-height: 300rpx;
  color: #fff;
}
.project-info {
  padding: 10rpx 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12pt;
}
.project-info image {
  width: 80rpx; height: 80rpx;
}
.member-view {
  margin-top: -72rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.member-view>view {
  margin: 0 20rpx;
  width: 140rpx; height: 140rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border: 2px solid #fff;
  border-radius: 50%;
  box-shadow: 2px 2px 10px rgba(100, 100, 100, .2);  
  background: #fff;
}
.member-view button {
  width: 100%; height: 100%;
  border-radius: 50%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
}
.member-view image {
  width: 100%; height: 100%;
  border-radius: 50%;
  background: url('data:image/png;base64,') no-repeat center center;
  background-size: 60%; 
}

.task-item {
  margin: 0 25rpx; padding: 20rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid var(--ghostWhite);

}
.task-item .checkbox {
  margin: 0 15rpx 0 5rpx;
}
.task-item image {
  width: 50rpx; height: 50rpx;
  border: 1px solid var(--ghostWhite);
  border-radius: 50%;
  background: url('data:image/png;base64,') no-repeat center center;
  background-size: 60%;
}
.task-item input,
.task-item-title {
  flex: 1;
}
.task-item.done-task-item {
  color: var(--tips-font-color);
  text-decoration: line-through;
}
.task-item i-icon {
  margin-right: 10rpx;
  color: var(--blue);
}
.task-item.done-task-item i-icon {
  color: var(--green);
}

.canvas-view {
  width: 100vw;
  position: absolute;
  top: 0;
}
.canvas-view .mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, .7);
  z-index: 10;
  transition: all .2s ease-in-out;
  opacity: 0;
  visibility: hidden;
}
.canvas-view .main {
  margin: 50rpx auto;
  width: 70vw;
  position: relative;
  z-index: 100;
  transition: all .2s ease-in-out;
  display: none;
}
.canvas-view.active .main {
  display: block;
}
.canvas-view.active .mask {
  opacity: 1;
  visibility: visible;
}
.canvas-view canvas {
  width: 70vw; height: 120vw;
}
.canvas-view .download-btn {
  margin: 50rpx auto 0; padding: 20rpx 0;
  width: 300rpx;
  text-align: center;
  background: var(--green);
  color: #fff;
  border-radius: 20px;
  box-shadow: 2px 2px 10px rgba(10, 10, 10, .2);  
}