.title {
  padding: 30rpx;
  font-size: 14pt;
  font-weight: 450;
  color: var(--yc-green);
}
.time {
  padding: 0 30rpx;
  color: var(--tips-font-color);
}

.rich-text {
  width: 690rpx; min-height: 30vh;
  padding: 30rpx;
  font-size: 12pt;
}
.rich-text view {
  margin: 25rpx 0;
  line-height: 2rem;
}
.rich-text image {
  width: 100%; height: 300rpx;
}
.rich-text video {
  width: 100%;
}
.rich-text .label {
  text-indent: 1em;
  border-left: 5px solid var(--yc-green);
}
.rich-text .opt-link {
  text-indent: 1em;
}
